                    <form onsubmit="return validateForm()" novalidate action="/Home/Contect" method="post" enctype="multipart/form-data">
                        <div class="form-group mt-3">
                            <label>Name</label>
                            <input type="text" name="Name" class="form-control Namefiled1" placeholder="place Enter Your Name" />
                            <small class="form-text text-danger ml-2  Msg_filed1"></small>
                        </div>

                        <div class="form-group mt-1">
                            <label>FatherName</label>
                            <input type="text" name="FatherName" class="form-control Namefiled2" placeholder="place Enter Your FtherName" />
                            <small class="form-text text-danger ml-2  Msgfiled2"></small>
                        </div>
                        <div class="form-group mt-1">
                            <label>Date_of_Birth</label>
                            <input type="date" name="Dob" class="form-control Namefiled3" placeholder="place Enter Your Dob" />
                            <small class="form-text text-danger ml-2 Errer Msgfiled3 "></small>
                        </div>

                        <div class="form-group mt-1">
                            <label>Phone</label>
                            <input type="number" name="Phone" class="form-control Namefiled4" placeholder="place Enter Your FtherName" />
                            <small class="form-text text-danger ml-2  Msgfiled4"></small>
                        </div>

                        <div class="form-group mt-1">
                            <label>Age</label>
                            <input type="number" name="Age" class="form-control Namefiled5 " placeholder="place Enter Your FtherName" />
                            <small class="form-text text-danger ml-2  Msgfiled5"></small>
                        </div>
                        <div class="form-group mt-1">
                            <label>Image</label>
                            <input type="file" name="Image" class="form-control Namefiled6" placeholder="place Enter Your FtherName" />
                            <small class="form-text text-danger ml-2  Msgfiled6"></small>
                        </div>
                        <div class="container text-center">
                            <input type="submit" value=" Submit" class="btn btn-outline-primary" />
                            @*<button class="btn btn-outline-primary">Register</button>*@
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FatherName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Dob)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Age)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FatherName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dob)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Image)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
